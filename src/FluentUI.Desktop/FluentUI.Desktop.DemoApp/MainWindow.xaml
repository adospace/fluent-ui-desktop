<Window x:Class="FluentUI.Desktop.DemoApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FluentUI.Desktop.DemoApp"
        mc:Ignorable="d"
        Background="{StaticResource DefaultBackground}"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TreeView
            SelectedItemChanged="TreeView_SelectedItemChanged"
            >
            <TreeViewItem Header="Core Controls" IsExpanded="True">
                <TreeViewItem x:Name="navButtons" Header="Buttons" Tag="Buttons"/>
            </TreeViewItem>
        </TreeView>

        <ContentControl
            x:Name="pageContainer"
            Grid.Column="1">
            
        </ContentControl>
        
    </Grid>
</Window>
